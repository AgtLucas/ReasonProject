{
  "name": "ExampleProject",
  "version": "0.0.1",
  "description": "Example project with Reason as a dependency",
  "repository": {
    "type": "git",
    "url": "https://github.com/reasonml/ExampleProject.git"
  },
  "keywords": [
    "reason",
    "example"
  ],
  "author": "jordwalke",
  "license": "MIT",
  "homepage": "https://github.com/reasonml/ExampleProject",
  "dependencies": {
    "reason": "https://github.com/facebook/reason.git#772c25a424ef92841caea9cf8ff1308517aec5e6",
    "ocaml-findlib": "https://github.com/npm-ml/ocaml-findlib.git#npm-1.6.1",
    "ocaml": "https://github.com/npm-ml/ocaml.git#npm-4.02.3",
    "dependency-env": "https://github.com/npm-ml/dependency-env.git"
  },
  "scripts": {
    "whereisocaml": "eval $(dependencyEnv) && which ocamlopt",
    "whereisreason": "eval $(dependencyEnv) && which refmt",
    "postinstall": "eval $(dependencyEnv) && ocamlc -pp refmt -impl ./src/Test.re -o ./Test.exe 2>&1 | refmterr",
    "test": "eval $(dependencyEnv) && ./Test.exe",
    "clean": "eval $(dependencyEnv) && ocamlbuild -clean"
  }
}

